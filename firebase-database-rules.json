{
  "rules": {
    "users": {
      ".read": true,
      ".indexOn": ["username"],
      "$userId": {
        ".write": "!data.exists()",
        ".validate": "newData.hasChildren(['userId', 'username', 'passwordHash', 'salt', 'createdAt'])",
        "status": {
          ".read": true,
          ".write": true
        },
        "friends": {
          ".read": true,
          ".write": true,
          "$friendId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "games": {
      ".read": true,
      ".write": true,
      ".indexOn": ["status", "lobbyName", "isPublic", "createdAt"]
    },
    "invitations": {
      "$userId": {
        ".read": true,
        ".write": true,
        ".indexOn": ["status", "timestamp"]
      }
    },
    "friendRequests": {
      ".read": true,
      ".write": true,
      "$requestId": {
        ".read": true,
        ".write": true
      },
      ".indexOn": ["fromUserId", "toUserId", "status"]
    },
    "friends": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true,
        "$friendId": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
}

