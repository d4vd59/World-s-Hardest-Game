<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2a2a2a"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Lobby Name -->
        <TextView
            android:id="@+id/tvLobbyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lobby Name"
            android:textSize="20sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvHostName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Host: Player"
                android:textSize="14sp"
                android:textColor="#CCCCCC"/>

            <TextView
                android:id="@+id/tvLobbyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Ã–ffentlich"
                android:textSize="14sp"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <!-- Player Count & Level Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvPlayerCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spieler: 1/4"
                android:textSize="14sp"
                android:textColor="#CCCCCC"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textSize="14sp"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- Join Button -->
        <Button
            android:id="@+id/btnJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beitreten"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

